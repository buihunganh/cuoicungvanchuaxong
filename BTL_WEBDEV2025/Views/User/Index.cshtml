@{
    ViewData["Title"] = "User";
    Layout = "_Layout";
}

@model IEnumerable<dynamic>
<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-md-3 mb-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <div class="rounded bg-light d-inline-flex align-items-center justify-content-center overflow-hidden" style="width:90px;height:90px;">
                        @if (!string.IsNullOrWhiteSpace((string)ViewBag.AvatarUrl))
                        {
                            <img src="@((string)ViewBag.AvatarUrl)" alt="avatar" style="width:100%;height:100%;object-fit:cover;" />
                        }
                        else
                        {
                            <i class="bi bi-person fs-1 text-muted"></i>
                        }
                    </div>
                    <div class="mt-2 fw-bold">@((string)(ViewBag.Name ?? ViewBag.Email))</div>
                    <small class="text-muted">@ViewBag.Email</small>
                    <div class="mt-3 small text-muted">Manage your profile and view order history</div>
                    <form id="avatarForm" asp-controller="User" asp-action="UploadAvatar" method="post" enctype="multipart/form-data" class="mt-3">
                        @Html.AntiForgeryToken()
                        <input id="avatarInput" class="d-none" type="file" name="avatar" accept=".jpg,.jpeg,.png,.webp" />
                        <button type="button" class="btn btn-outline-dark btn-sm" onclick="document.getElementById('avatarInput').click()">Upload Avt</button>
                    </form>
                    <script>
                        (function(){
                            const i=document.getElementById('avatarInput');
                            const f=document.getElementById('avatarForm');
                            if(i&&f){ i.addEventListener('change', ()=> { if(i.files?.length) f.submit(); }); }
                        })();
                    </script>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-9">
            @if (TempData["UserMsgSuccess"] != null)
            {
                <div class="alert alert-success">@TempData["UserMsgSuccess"]</div>
            }
            @if (TempData["UserMsgError"] != null)
            {
                <div class="alert alert-danger">@TempData["UserMsgError"]</div>
            }
            <ul class="nav nav-tabs mb-3" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#tab-account" type="button" role="tab">Account detail</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" data-bs-toggle="tab" data-bs-target="#tab-orders" type="button" role="tab">Orders</button>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab-account" role="tabpanel">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h5 class="fw-bold mb-3">Account detail</h5>
                            <form asp-controller="User" asp-action="UpdateProfile" method="post" class="row g-3">
                        @Html.AntiForgeryToken()
                        <div class="col-12">
                            <label class="form-label">User name</label>
                            <input class="form-control" name="FullName" value="@((string)(ViewBag.Name ?? ""))" required />
                        </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label">Phone</label>
                                    <input class="form-control" name="PhoneNumber" value="@((string)(ViewBag.Phone??""))" />
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label">Date of birth</label>
                                    <input type="date" class="form-control" name="DateOfBirth" value="@((ViewBag.Dob!=null? ((DateTime)ViewBag.Dob).ToString("yyyy-MM-dd"):""))" />
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label">Gender</label>
                                    <select class="form-select" name="Gender" value="@((string)(ViewBag.Gender??""))">
                                        <option value="">Prefer not to say</option>
                                        <option value="Female">Female</option>
                                        <option value="Male">Male</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div class="col-12 col-md-6">
                                    <label class="form-label">Password</label>
                                    <input type="password" class="form-control" name="Password" minlength="6" maxlength="50" placeholder="Leave blank to keep" />
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Address</label>
                                    <input class="form-control" name="Address" value="@((string)(ViewBag.Address??""))" placeholder="Street, city, district" />
                                </div>
                        <div class="col-12 d-flex justify-content-between align-items-center">
                            <div>
                                <form asp-controller="User" asp-action="DeleteAccount" method="post" onsubmit="return confirm('Delete your account? This cannot be undone.');" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger btn-sm">Delete account</button>
                                </form>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-dark">Save</button>
                            </div>
                        </div>
    </form>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="tab-orders" role="tabpanel">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <h5 class="fw-bold mb-3">Order history</h5>
                            @if (Model != null && Model.Any())
                            {
                                var idx = 1;
                                @foreach (var o in Model)
                                {
                                    <div class="card mb-3 border">
                                        <div class="card-header bg-light">
                                            <div class="row align-items-center">
                                                <div class="col-md-6">
                                                    <strong>Order #@o.Id</strong>
                                                    <small class="text-muted ms-2">@(((DateTime)o.CreatedAt).ToLocalTime().ToString("yyyy-MM-dd HH:mm"))</small>
                                                </div>
                                                <div class="col-md-6 text-md-end">
                                                    <span class="badge bg-@(o.Status == "Completed" ? "success" : o.Status == "Cancelled" ? "danger" : "warning")">@o.Status</span>
                                                    @if (!string.IsNullOrEmpty(o.PaymentMethod))
                                                    {
                                                        <span class="badge bg-info ms-2">@o.PaymentMethod</span>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table class="table table-sm mb-0">
                                                    <thead>
                                                        <tr>
                                                            <th style="width: 80px;">Image</th>
                                                            <th>Product</th>
                                                            <th class="text-center">Quantity</th>
                                                            <th class="text-end">Unit Price</th>
                                                            <th class="text-end">Subtotal</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var it in o.Items)
                                                        {
                                                            <tr>
                                                                <td>
                                                                    @if (!string.IsNullOrEmpty(it.ProductImageUrl))
                                                                    {
                                                                        <img src="@it.ProductImageUrl" alt="@it.ProductName" class="img-fluid rounded" style="width: 60px; height: 60px; object-fit: cover;" />
                                                                    }
                                                                    else
                                                                    {
                                                                        <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 60px; height: 60px;">
                                                                            <i class="bi bi-image text-muted"></i>
                                                                        </div>
                                                                    }
                                                                </td>
                                                                <td>
                                                                    <strong>@it.ProductName</strong>
                                                                    <br />
                                                                    <small class="text-muted">Product ID: #@it.ProductId</small>
                                                                    @if (!string.IsNullOrWhiteSpace(it.Size) || !string.IsNullOrWhiteSpace(it.Color))
                                                                    {
                                                                        <br />
                                                                        <small class="text-muted">
                                                                            @if (!string.IsNullOrWhiteSpace(it.Size))
                                                                            {
                                                                                <span>Size: @it.Size</span>
                                                                            }
                                                                            @if (!string.IsNullOrWhiteSpace(it.Size) && !string.IsNullOrWhiteSpace(it.Color))
                                                                            {
                                                                                <span> | </span>
                                                                            }
                                                                            @if (!string.IsNullOrWhiteSpace(it.Color))
                                                                            {
                                                                                <span>Color: @it.Color</span>
                                                                            }
                                                                        </small>
                                                                    }
                                                                </td>
                                                                <td class="text-center">@it.Quantity</td>
                                                                <td class="text-end">@String.Format(System.Globalization.CultureInfo.GetCultureInfo("en-US"), "{0:C}", (decimal)it.UnitPrice)</td>
                                                                <td class="text-end"><strong>@String.Format(System.Globalization.CultureInfo.GetCultureInfo("en-US"), "{0:C}", (decimal)it.SubTotal)</strong></td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                    <tfoot>
                                                        <tr class="border-top">
                                                            <td colspan="4" class="text-end fw-bold">Total Amount:</td>
                                                            <td class="text-end fw-bold fs-5">@String.Format(System.Globalization.CultureInfo.GetCultureInfo("en-US"), "{0:C}", (decimal)o.TotalAmount)</td>
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                            <div class="mt-2 small text-muted">
                                                <strong>Order Details Count:</strong> @o.Items.Count item(s)
                                            </div>
                                        </div>
                                    </div>
                                    idx++;
                                }
                            }
                            else
                            {
                                <div class="text-muted text-center py-5">
                                    <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                    You have no orders yet.
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


