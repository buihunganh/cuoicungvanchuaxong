@model List<Product>
@{
    ViewData["Title"] = "Search Results";
    var brands = ViewBag.Brands as List<string>;
var searchQuery = ViewBag.SearchQuery as string ?? "";
}

<div class="container-xl py-4 men-page">
    <div class="mb-4">
        <h1 class="fw-bold mb-2 text-uppercase">Search Results</h1>
        @if (!string.IsNullOrWhiteSpace(searchQuery))
        {
            <p class="text-muted mb-3">Found <strong>@Model.Count</strong> result(s) for "<strong>@searchQuery</strong>"</p>
        }
        else
        {
            <p 
class="text-muted mb-3">Please enter a search term</p>
        }
    </div>

    @if (!string.IsNullOrWhiteSpace(searchQuery))
    {
        <div class="d-md-flex justify-content-between align-items-center mb-4 gap-3">
            <div class="brand-nav-tabs my-2 my-md-0 flex-grow-1" id="brandNavTabs">
                <a class="btn btn-outline-primary btn-sm rounded-pill me-2 mb-2" href="#all">All Brands</a>
                @if(brands != null){
  
              @foreach(var b in brands){
                    <a class="btn btn-outline-secondary btn-sm rounded-pill me-2 mb-2" href="#brand-@b.Replace(" ", "-")">@b</a>
                }}
            </div>
            @await Component.InvokeAsync("ProductFilter", new { 
          
      minPriceId = "searchMinPrice", 
                maxPriceId = "searchMaxPrice", 
                brandSelectId = "searchBrandSelect", 
                sortSelectId = "searchSortPrice", 
                applyButtonId = "searchApplyFilters", 
               
 resetButtonId = "searchResetFilters" 
            })
        </div>

        @if (Model.Count > 0)
        {
            <section id="all">
                <div class="row g-3" id="searchGrid">
                @foreach (var product in Model)
     
           {
                    var brand = product.Brand?.Name ??
"Others";
                    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 product-item" 
                         data-product-id="@product.Id" 
                         data-price="@product.Price" 
                         data-brand="@brand" 
            
             data-name="@product.Name.ToLower()">
                        <div class="card men-card border rounded-4 h-100 bg-white">
                            <div class="d-flex align-items-end justify-content-center men-card-img-wrapper position-relative" style="background:#fff;">
                       
         @if (!string.IsNullOrEmpty(product.ImageUrl))
                                {
                                    <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid card-thumb-img" loading="lazy" />
                
                }
                                else
                                {
                    
                <i class="bi bi-image fs-1 text-secondary"></i>
                                }
                                @if(product.DiscountPrice.HasValue && product.DiscountPrice>0){
              
                      <span class="badge bg-danger position-absolute top-0 end-0 m-2">Sale</span>
                                }
                            </div>
            
                <div class="card-body d-flex flex-column align-items-start p-3 pb-2">
                                <span class="badge bg-light border text-dark fw-normal mb-1 px-2 py-1 small">@brand</span>
                                <h5 class="fw-bold mb-1" style="font-size:1.13rem;">@product.Name</h5>
  
                              <div class="small text-muted mb-2" style="min-height:38px;">@product.Description</div>
                                <div class="mt-auto">
                                 
   @if(product.DiscountPrice.HasValue && product.DiscountPrice>0){
                                        <span class="text-danger fw-bold me-2">$@product.DiscountPrice</span>
                                        <span class="text-decoration-line-through small text-muted">$@product.Price</span>
         
                           } else {
                                        <span class="fw-bold">$@product.Price</span>
                              
      }
                                </div>
                            </div>
                            <a href="#" class="order-btn" role="button">Order</a>
   
                     </div>
                    </div>
                }
                </div>
            </section>

            @if(brands!=null) {
              foreach(var br in brands) {
                var items = Model.Where(p => p.Brand?.Name == br).ToList();
                <section id="brand-@br.Replace(" ", "-")" class="mt-5 brand-section">
                    <h2 class="h4 fw-bold mb-3 brand-heading">@br</h2>
                     @if (items.Any())
                     {
                        <div class="row g-3">
                        @foreach(var product in items) {
                            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 product-item" 
                                 data-product-id="@product.Id" 
                                 data-price="@product.Price" @* Sửa: Luôn dùng giá gốc *@
                                 data-brand="@br" 
                                 data-name="@product.Name.ToLower()">
                                <div class="card men-card border rounded-4 h-100 bg-white">
                                    <div class="d-flex align-items-end justify-content-center men-card-img-wrapper position-relative" data-brand="@br">
                                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                                        {
                                            <img src="@product.ImageUrl" alt="@product.Name" class="img-fluid card-thumb-img" loading="lazy" />
                                        }
                                        else
                                        {
                                            <i class="bi bi-image fs-1 text-secondary"></i>
                                        }
                                        @if(product.DiscountPrice.HasValue && product.DiscountPrice>0){
                                            <span class="badge bg-danger position-absolute top-0 end-0 m-2">Sale</span>
                                        }
                                    </div>
                                    <div class="card-body d-flex flex-column align-items-start p-3 pb-2">
                                        <span class="badge bg-light border text-dark fw-normal mb-1 px-2 py-1 small">@br</span>
                                        <h5 class="fw-bold mb-1" style="font-size:1.13rem;">@product.Name</h5>
                                        <div class="small text-muted mb-2" style="min-height:38px;">@product.Description</div>
                                        <div class="mt-auto">
                                            @if(product.DiscountPrice.HasValue && product.DiscountPrice>0){
                                                <span class="text-danger fw-bold me-2">$@product.DiscountPrice</span>
                                                <span class="text-decoration-line-through small text-muted">$@product.Price</span>
                                            } else {
                                                <span class="fw-bold">$@product.Price</span>
                                            }
                                        </div>
                                    </div>
                                    <a href="#" class="order-btn" role="button">Order</a>
                                </div>
                            </div>
                        }
                        </div>
                    }
                    else
                    {
                        <div class="text-muted mb-3">No products found for @br in these results.</div>
                    }
                </section>
              }
            }
            }
       
 else
        {
            <div class="text-center py-5">
                <i class="bi bi-search fs-1 text-muted mb-3 d-block"></i>
                <h4 class="fw-bold mb-2">No products found</h4>
                <p class="text-muted mb-4">Try adjusting your search terms or browse our categories</p>
         
       <a asp-controller="Products" asp-action="Men" class="btn btn-outline-dark">Browse Men's Shoes</a>
            </div>
        }
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-search fs-1 text-muted mb-3 d-block"></i>
            <h4 class="fw-bold mb-2">Enter a search term</h4>
          
  <p class="text-muted">Use the search bar above to find products</p>
        </div>
    }
</div>

@section Styles {
<style>
.men-card { border-radius: 16px !important;
box-shadow: 0 6px 24px rgba(0,0,0,0.09); min-height:430px; display:flex; flex-direction: column; border: 1.5px solid #E5E5E5;background:#fff; transition: box-shadow .17s,border-color .13s,transform .17s;
}
.men-card:hover {box-shadow:0 22px 52px rgba(0,0,0,.15);transform:translateY(-7px) scale(1.034); border-color:#181818;}
